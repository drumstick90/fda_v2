{
  "name": "fda-search-v2",
  "version": "1.0.0",
  "description": "Lean FDA data search and retrieval platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn main:app --reload --port 8000",
    "build": "cd frontend && npm run build",
    "start": "docker-compose up",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt"
  },
  "keywords": ["fda", "drugs", "search", "api", "healthcare"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}